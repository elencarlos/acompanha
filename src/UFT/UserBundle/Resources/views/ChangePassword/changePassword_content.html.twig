{% trans_default_domain 'FOSUserBundle' %}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Troca de Senha</h3>

        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        </div>
        <!-- /.box-tools -->
    </div>
    <div class="box-body">
    <div class="row clearfix">
        <div class="col-md-offset-1 col-md-4 column">
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST"  role="form" class="fos_user_change_password">
                {{ form_widget(form) }}
                <div>
                    <input type="submit" value="{{ 'Alterar'|trans }}" class="btn btn-default " />
                </div>
            </form>
        </div>
    </div>
</div>